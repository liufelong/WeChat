/* pages/setting/setting.wxss */
.container {
  background-color: #efeff4;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
}
.category-item-personal-info {
  background-color: white;
  height: 130rpx;
  width: 100%;
  display: flex;
  padding: 20rpx 0;
}

.user-avatar {
  margin: 0 30rpx;
  width: 130rpx;
  height: 130rpx;
  position: relative;
}

.user-avatar image {
  vertical-align: top;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 2rpx;
}
.user-name {
  margin-left: 30rpx;
  flex: 1;
  padding-top: 10rpx;
}

.category-item {
  width: 100%;
  margin: 20rpx 0;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  background-color: #ffffff;
}

.detail-item {
  display: flex;
  margin-left: 30rpx;
  border-bottom: 1rpx solid rgba(217, 217, 217, .4);
  height: 85rpx;
  align-items: center;
}
/* 最后一个去除分割线 */
.detail-item:last-child{
  border-bottom: none;
}

.detail-item image {
  width: 40rpx;
  height: 40rpx;
}

.detail-item text {
  color: #7f8389;
  font-size: 24rpx;
  flex: 1;
  margin-left: 30rpx;
}

.detail-item-btn {
  width: 50rpx;
  height: 40rpx;
  color: #d9d9d9;
  margin-right: 20rpx;
  text-align: center;
}
.detail-item-btn::after{
  display: inline;
  content: "";
  width: 16rpx;
  height: 16rpx;
  color: #d9d9d9;
  margin-top: 8rpx;
  border: 3rpx solid #d9d9d9;
  border-top-color: transparent;
  border-left-color: transparent;
  transform: rotate(-45deg);
}


