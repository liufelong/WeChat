.comment-item {
  margin: 20rpx 0 20rpx 24rpx;
  padding: 24rpx 24rpx 24rpx 0;
  border-bottom: 1rpx solid #cccccc;
}

.comment-item:last-child{
  border-bottom: none;
}

.comment-title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #212121;
  border-bottom: 1px solid #cccccc;
  margin-left: 24rpx;
  padding: 8rpx 0;
}

.comment-item-header {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment-item-header .left-img image{
  height: 80rpx;
  width: 80rpx;
}

.user-name{
  font-size: 26rpx;
  margin-left: 20rpx;
}

.comment-voice{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 200rpx;
  height: 60rpx;
  border: 1rpx solid #cccccc;
  background-color: white;
  border-radius: 6rpx;
 } 

 .voice-play{
   height: 60rpx;
   width: 60rpx;
 }

 .comment-img image{
   max-width: 32%;
   margin-right: 10rpx;
   height: 220rpx;
   width: 220rpx;
 }

 .comment-time{
   margin-top: 10rpx;
   color: #cccccc;
   font-size: 24rpx;
 }
